RewriteEngine On

# Disable LiteSpeed Cache for this site
<IfModule LiteSpeed>
    CacheLookup off
</IfModule>

# No-cache for HTML pages and JS/CSS during active development
<IfModule mod_headers.c>
    <FilesMatch "\.(html|php|js|css)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Pass Authorization header
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# API routing - send all /api/* requests to /api/index.php
RewriteCond %{REQUEST_URI} ^/api/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/(.*)$ /api/index.php [QSA,L]

# Preserve legacy directories
RewriteRule ^aianswernow/ - [L]
RewriteRule ^restaurants/ - [L]

# Correct MIME type for ES modules
<IfModule mod_mime.c>
    AddType text/javascript .js .mjs
</IfModule>

# Static assets - serve directly
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|webp|mp3|mp4|pdf|json|map)$
RewriteRule ^ - [L]

# SPA catch-all
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/storage/
RewriteCond %{REQUEST_URI} !^/aianswernow/
RewriteCond %{REQUEST_URI} !^/restaurants/
RewriteRule ^ /index.php [L]

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 0 seconds"
    ExpiresByType application/javascript "access plus 0 seconds"
    ExpiresByType image/png A31557600
    ExpiresByType image/jpeg A31557600
    ExpiresByType image/jpg A31557600
    ExpiresByType image/gif A31557600
    ExpiresByType image/svg+xml A31557600
    ExpiresByType image/webp A31557600
    ExpiresByType font/woff2 A31557600
    ExpiresByType font/woff A31557600
    ExpiresByType font/ttf A31557600
    ExpiresByType application/pdf A31557600
    ExpiresByType application/json "access plus 1 hour"
</IfModule>

# GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>
